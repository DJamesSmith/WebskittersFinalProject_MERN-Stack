<!DOCTYPE html>
<html>

<%-include("../common/header.ejs")%>

    <body>
        <div class="wrapper">
            <%-include("../common/navbar.ejs")%>
                <%-include("../common/sidebar.ejs")%>

                    <div class="content-wrapper web-height">
                        <div class="content-header">
                            <div class="container-fluid">
                                <div class="row mb-2">
                                    <div class="col-sm-6">
                                        <h1 class="m-0 text-dark">
                                            <%=dashboardtitle%>
                                        </h1>
                                    </div>

                                    <div class="col-sm-6">
                                        <ol class="breadcrumb float-sm-right">
                                            <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                                            <li class="breadcrumb-item active">Dashboard</li>
                                            <li class="breadcrumb-item active"> Doctor </li>
                                        </ol>
                                    </div>
                                </div>

                                <div class="row mb-2">
                                    <div class="container mt-5">
                                        <h1 class="text-center mb-4"> Add New Doctor </h1>

                                        <% if (message.length > 0) {%> 
                                            <div class="alert alert-success">
                                              <%= message %>
                                            </div>
                                        <% } %>

                                        <form action="/admin/createDoctor" method="POST" enctype="multipart/form-data">
                                            <div class="mb-3">
                                                <label for="formFile" class="form-label"> Choose Image </label>
                                                <input class="form-control" type="file" id="formFile" name="docImage" required>
                                            </div>
                                            <div class="mb-3">
                                                <label for="exampleFormControlInput1" class="form-label"> Name </label>
                                                <input type="text" class="form-control" placeholder="Enter Doctor Name" name="docName" required>
                                            </div>
                                            <div class="mb-3">
                                                <label for="exampleFormControlInput1" class="form-label"> Department Name </label>
                                                <input type="text" class="form-control" placeholder="Enter Department Name" name="deptName" required>
                                            </div>
                                            <button type="submit" class="btn btn-success"> Submit </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>             
        </div>
        <%-include("../common/footer.ejs")%>
        <%-include("../common/scripts.ejs")%>
    </body>

</html>