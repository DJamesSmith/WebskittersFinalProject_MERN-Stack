<!DOCTYPE html>
<html>

<%-include("../common/header.ejs")%>

    <body>
        <div class="wrapper">
            <%-include("../common/navbar.ejs")%>
                <%-include("../common/sidebar.ejs")%>

                    <div class="content-wrapper web-height">
                        <div class="content-header">
                            <div class="container-fluid">
                                <div class="row mb-2">
                                    <div class="col-sm-6">
                                        <h1 class="m-0 text-dark">
                                            <%=dashboardtitle%>
                                        </h1>
                                    </div>

                                    <div class="col-sm-6">
                                        <ol class="breadcrumb float-sm-right">
                                            <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                                            <li class="breadcrumb-item active">Dashboard</li>
                                            <li class="breadcrumb-item active"> Comment </li>
                                        </ol>
                                    </div>
                                </div>

                                <div class="row mb-2">
                                    <div class="container mt-5">
                                        <h1 class="text-center mb-4"> Edit Doctor </h1>

                                        <% if (message.length> 0) {%>
                                            <div class="alert alert-success">
                                                <%= message %>
                                            </div>
                                            <% } %>

                                                <form action="/admin/updateDoctor/<%= data.id %>" method="POST"
                                                    enctype="multipart/form-data">
                                                    <div class="mb-3">
                                                        <label for="formFile" class="form-label"> Choose Image </label>
                                                        <input class="form-control" type="file" id="formFile" name="docImage" value="<%=data.docImage%>" required>
                                                    </div> 
                                                    <div class="mb-3">
                                                        <label for="exampleFormControlInput1" class="form-label"> Name
                                                        </label>
                                                        <input type="text" class="form-control"
                                                            placeholder="Enter Doctor Name" name="docName" value="<%=data.docName%>" required>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="exampleFormControlInput1" class="form-label">
                                                            Department Name </label>
                                                        <input type="text" class="form-control"
                                                            placeholder="Enter Department Name" name="deptName" value="<%=data.deptName%>"
                                                            required>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="exampleFormControlTextarea1" class="form-label">
                                                            Description </label>
                                                        <textarea class="form-control resize-disabled" rows="3"
                                                            placeholder="Enter Doctor Description" name="docDescription" value="<%=data.docDescription%>"
                                                            required></textarea>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="exampleFormControlInput1" class="form-label">
                                                            Qualification </label>
                                                        <input type="text" class="form-control"
                                                            placeholder="Enter Qualification"
                                                            name="docQualificationName" value="<%=data.docQualificationName%>" required>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="exampleFormControlInput1" class="form-label"> Year
                                                        </label>
                                                        <input type="text" class="form-control" placeholder="Enter Year" name="docYear" value="<%=data.docYear%>" required>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="exampleFormControlTextarea1" class="form-label">
                                                            Qualification Description </label>
                                                        <textarea class="form-control resize-disabled" rows="3"
                                                            placeholder="Enter Qualification Description"
                                                            name="docQualificationDescription" value="<%=data.docQualificationDescription%>" required></textarea>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="exampleFormControlInput1" class="form-label"> Skills
                                                        </label>
                                                        <input type="text" class="form-control"
                                                            placeholder="Enter Skills" name="docSkills" value="<%=data.docSkills%>" required>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label for="exampleFormControlInput1" class="form-label">
                                                            Expertise </label>
                                                        <input type="text" class="form-control"
                                                            placeholder="Enter Expertise" name="docExpertise" value="<%=data.docExpertise%>" required>
                                                    </div>

                                                    <button type="submit" class="btn btn-success"> Update </button>
                                                </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>          
        </div>
        <%-include("../common/footer.ejs")%>
        <%-include("../common/scripts.ejs")%>
    </body>

</html>