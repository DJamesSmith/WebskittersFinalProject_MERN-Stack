<!DOCTYPE html>
<html>

<%-include("../common/header.ejs")%>

    <body>
        <div class="wrapper">
            <%-include("../common/navbar.ejs")%>
                <%-include("../common/sidebar.ejs")%>

                    <div class="content-wrapper web-height">
                        <div class="content-header">
                            <div class="container-fluid">
                                <div class="row mb-2">
                                    <div class="col-sm-6">
                                        <h1 class="m-0 text-dark">
                                            <%=dashboardtitle%>
                                        </h1>
                                    </div>

                                    <div class="col-sm-6">
                                        <ol class="breadcrumb float-sm-right">
                                            <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                                            <li class="breadcrumb-item active">Dashboard</li>
                                            <li class="breadcrumb-item active"> Departments </li>
                                        </ol>
                                    </div>
                                </div>

                                <div class="row mb-2">
                                    <div class="container mt-5">
                                        <a href="/admin/addDepartment"> <button type="button" class="btn btn-success mb-3"> Add New Department </button> </a>
                                        <table class="table table-dark table-striped text-center mb-5">
                                            <thead>
                                                <tr>
                                                    <th scope="col"> # </th>
                                                    <th scope="col"> Image </th>
                                                    <th scope="col"> Department Name </th>
                                                    <th scope="col"> Description </th>
                                                    <th colspan="2"> Action </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tbody>
                                                    <% if(displaydata.length > 0) {%>
                                                        <tbody>
                                                            <% for(let deptartmentDetails of displaydata){ %>
                                                                <% const p = deptartmentDetails.id %>
                                                            <tr>
                                                                <td scope="row"> <%=p.substring(20, 24)%> </td>
                                                                <td> <img src="/departmentUploads/<%= deptartmentDetails.deptImage %>" style="border-radius: 50%;" alt="" height="50" width="50"> </td>
                                                                <td> <%= deptartmentDetails.deptName %> </td>
                                                                <td> <%= deptartmentDetails.deptDescription %> </td>
                                                                <td> <a href="/admin/editDepartment/<%=deptartmentDetails.id%>"> <button type="button" class="btn btn-outline-primary"> Edit </button> </a> </td>
                                                                <td> <a href="/admin/deleteDepartment/<%=deptartmentDetails._id%>"> <button class="btn btn-danger"> Delete </button> </a> </td>
                                                            </tr>
                                                        </tbody>
                                                    <%}}else{%>
                                                    <h1> No data found </h1>
                                                    <% } %>
                                                </tbody>

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                   
        </div>
        <%-include("../common/footer.ejs")%>
        <%-include("../common/scripts.ejs")%>
    </body>

</html>