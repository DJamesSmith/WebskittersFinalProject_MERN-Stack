<!DOCTYPE html>
<html>

<%-include("../common/header.ejs")%>

    <body>
        <div class="wrapper">
            <%-include("../common/navbar.ejs")%>
                <%-include("../common/sidebar.ejs")%>

                    <div class="content-wrapper web-height">
                        <div class="content-header">
                            <div class="container-fluid">
                                <div class="row mb-2">
                                    <div class="col-sm-6">
                                        <h1 class="m-0 text-dark">
                                            <%=dashboardtitle%>
                                        </h1>
                                    </div>

                                    <div class="col-sm-6">
                                        <ol class="breadcrumb float-sm-right">
                                            <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                                            <li class="breadcrumb-item active">Dashboard</li>
                                            <li class="breadcrumb-item active"> Blog </li>
                                        </ol>
                                    </div>
                                </div>

                                <div class="row mb-2">
                                    <div class="container mt-5">
                                        <h1 class="text-center mb-4"> Edit Blog </h1>

                                        <% if (message.length > 0) {%> 
                                            <div class="alert alert-success">
                                                <%= message %>
                                            </div>
                                        <% } %>

                                        <form action="/admin/updateBlog/<%= data.id %>" method="POST" enctype="multipart/form-data">
                                            <div class="mb-3">
                                                <label for="exampleFormControlInput1" class="form-label"> Blog Name </label>
                                                <input type="text" class="form-control" placeholder="Enter Blog Heading" name="blogName" value="<%=data.blogName%>" required />
                                            </div>
                                            <div class="mb-3">
                                                <label for="exampleFormControlInput1" class="form-label"> Quote </label>
                                                <textarea type="text" class="form-control resize-disabled" placeholder="Enter Blog Quote" name="blogQuote" value="<%=data.blogQuote%>" required> </textarea>
                                            </div>
                                            <div class="mb-3">
                                                <label for="formFile" class="form-label"> Blog Image </label>
                                                <input class="form-control" type="file" id="formFile" name="blogImage" value="<%=data.blogImage%>" required>
                                            </div>
                                            <button type="submit" class="btn btn-success"> Update </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <%-include("../common/footer.ejs")%>
        </div>
        <%-include("../common/scripts.ejs")%>
    </body>

</html>