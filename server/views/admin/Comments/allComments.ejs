<!DOCTYPE html>
<html>

<%-include("../common/header.ejs")%>

    <body>
        <div class="wrapper">
            <%-include("../common/navbar.ejs")%>
                <%-include("../common/sidebar.ejs")%>

                    <div class="content-wrapper web-height">
                        <div class="content-header">
                            <div class="container-fluid">
                                <div class="row mb-2">
                                    <div class="col-sm-6">
                                        <h1 class="m-0 text-dark">
                                            <%=dashboardtitle%>
                                        </h1>
                                    </div>

                                    <div class="col-sm-6">
                                        <ol class="breadcrumb float-sm-right">
                                            <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                                            <li class="breadcrumb-item active">Dashboard</li>
                                            <li class="breadcrumb-item active"> Comment </li>
                                        </ol>
                                    </div>
                                </div>

                                <div class="mt-5">
                                    <a href="/admin/addComment"> <button type="button" class="btn btn-success mb-3"> Add New Comment </button> </a>
                                    <table class="table table-dark table-striped text-center mb-5">
                                        <thead>
                                            <tr>
                                                <th scope="col"> # </th>
                                                <th scope="col"> User Name </th>
                                                <th scope="col"> Email </th>
                                                <th scope="col"> Message </th>
                                                <th scope="col"> Address </th>
                                                <th scope="col"> Posted On </th>
                                                <th colspan="2"> Action </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tbody>
                                                <% if(displaydata.length > 0) {%>
                                                    <tbody>
                                                        <% for(let comment of displaydata){ %>
                                                            <% const p = comment.id %>
                                                        <tr>
                                                            <td scope="row"> <%=p.substring(20, 24)%> </td>
                                                            <td> <%= comment.commentName %> </td>
                                                            <td> <%= comment.commentEmail %> </td>
                                                            <td style="text-align: justify;"> <%= comment.commentMessage %> </td>
                                                            <td> <%= comment.commentAddress %> </td>
                                                            <td> <%= comment.createdAt %> </td>
                                                            <td> <a href="/admin/editComment/<%=comment.id%>"> <button type="button" class="btn btn-outline-primary"> Edit </button> </a> </td>
                                                            <td> <a href="/admin/deleteComment/<%=comment.id%>"> <button class="btn btn-danger"> Delete </button> </a> </td>
                                                        </tr>
                                                    </tbody>
                                                <%}}else{%>
                                                <h1> No data found </h1>
                                                <% } %>
                                            </tbody>

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <%-include("../common/footer.ejs")%>
        </div>
        <%-include("../common/scripts.ejs")%>
    </body>

</html>