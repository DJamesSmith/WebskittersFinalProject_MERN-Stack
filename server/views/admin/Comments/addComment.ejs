<!DOCTYPE html>
<html>

<%-include("../common/header.ejs")%>

    <body>
        <div class="wrapper">
            <%-include("../common/navbar.ejs")%>
                <%-include("../common/sidebar.ejs")%>

                    <div class="content-wrapper web-height">
                        <div class="content-header">
                            <div class="container-fluid">
                                <div class="row mb-2">
                                    <div class="col-sm-6">
                                        <h1 class="m-0 text-dark">
                                            <%=dashboardtitle%>
                                        </h1>
                                    </div>

                                    <div class="col-sm-6">
                                        <ol class="breadcrumb float-sm-right">
                                            <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                                            <li class="breadcrumb-item active">Dashboard</li>
                                            <li class="breadcrumb-item active"> Comment </li>
                                        </ol>
                                    </div>
                                </div>

                                <div class="row mb-2">
                                    <div class="container mt-5">
                                        <h1 class="text-center mb-4"> Add New Comment </h1>

                                        <% if (message.length > 0) {%> 
                                            <div class="alert alert-success">
                                              <%= message %>
                                            </div>
                                        <% } %>

                                        <form action="/admin/createComment" class="row g-3 needs-validation mt-5" method="POST">
                                            <div class="mb-3 col-md-6">
                                                <label for="exampleFormControlInput1" class="form-label"> User's Name </label>
                                                <input type="text" class="form-control" placeholder="Enter User's Name" name="commentName" required>
                                            </div>
                                            <div class="mb-3 col-md-6">
                                                <label for="exampleFormControlInput1" class="form-label"> User's Email </label>
                                                <input type="email" class="form-control" placeholder="Enter User's Email ID" name="commentEmail" required>
                                            </div>
                                            <div class="mb-3 col-md-12">
                                                <label for="exampleFormControlInput1" class="form-label"> Address </label>
                                                <input type="text" class="form-control" placeholder="Enter User's Address" name="commentAddress" required>
                                            </div>
                                            <div class="mb-3 col-md-12">
                                                <label for="exampleFormControlTextarea1" class="form-label"> Description </label>
                                                <textarea class="form-control resize-disabled" rows="3" placeholder="Enter Comment Message" name="commentMessage" required></textarea>
                                            </div>
                                            <button type="submit" class="btn btn-success mt-3"> Submit </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <%-include("../common/footer.ejs")%>
        </div>
        <%-include("../common/scripts.ejs")%>
    </body>

</html>